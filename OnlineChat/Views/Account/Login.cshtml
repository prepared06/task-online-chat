@model OnlineChat.Models.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


 
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="NickName">Enter your nick name</label><br />
            <input type="text" asp-for="NickName" />
            <span asp-validation-for="NickName" /><br />
        </div>
        
        <div class="form-group">
            <input type="submit" value="Войти" class="btn" />
        </div>
    </div>
</form>
